<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeFragment"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_gravity="top"
        android:id="@+id/media_container">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoplayer"/>
        <com.brouding.doubletaplikeview.DoubleTapLikeView
            android:layout_gravity="bottom"
            android:id="@+id/doubletap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:icon="@drawable/heart"
            app:scaleType="fitCenter"
            app:disableAnimation="false"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            app:adjustViewBounds="true"
            app:doubleTapIn="200" />
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dangerous"
            android:visibility="gone"
            android:background="@drawable/roundedcornerstoprounded"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disclaimer"
                android:layout_marginTop="9dp"
                android:textAlignment="center"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="9dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonscv"
            android:layout_marginEnd="-145dp"
            android:layout_width="240dp"
            android:layout_height="75dp"
            app:cardCornerRadius="37.5dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="65dp"
            android:backgroundTint="#4D393939">
            <ImageButton
                android:id="@+id/closecv"
                android:rotation="180"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@drawable/jz_click_back_selector" />
            <ImageButton
                android:id="@+id/opencv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@drawable/jz_click_back_selector" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:layout_marginStart="35dp"
                android:id="@+id/like"
                android:background="@drawable/heart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-1dp"
                android:layout_marginStart="56dp"
                android:id="@+id/likes"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-1dp"
                android:id="@+id/comments"
                android:textColor="@color/white"/>
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:adjustViewBounds="true"
                android:id="@+id/comment"
                android:background="@drawable/ic_comment_icon"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:id="@+id/share"
                android:background="@drawable/ic_share_white_24dp"/>
            <ImageButton
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:rotation="90"
                android:tint="@color/white"
                android:src="@drawable/ic_baseline_more_horiz_24"
                android:layout_gravity="right"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/image_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:background="@color/transparent"
                android:layout_marginStart="7dp"
                android:paddingEnd="8dp"
                android:text="Error"
                android:textStyle="bold"
                android:textColor="@color/white"/>


        </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_marginEnd="150dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="16dp"
            android:maxLines="4"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="200dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white" />
        <FrameLayout
            android:id="@+id/commentfragment"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>
