<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.thilojaeggi.frooze.LoginActivity"
    android:background="@color/background_color"

    android:orientation="vertical">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">






<Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/settings"
        android:scaleType="fitXY"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"

        tools:context="com.thilojaeggi.frooze.ProfileFragment"
        android:src="@drawable/ic_settings_black_24dp" />

</Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:context="com.thilojaeggi.frooze.ProfileFragment"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="5dp"/>
    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack"
        android:textSize="17sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is your Bio, you can edit it by clicking on it"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/alpha60_black"
        android:textSize="17sp"
        android:textStyle="normal" />
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp" >
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="58dp"
            android:background="@color/alpha60_black"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="-55dp"
            android:background="@color/alpha60_black"/>
        <TextView
            android:id="@+id/follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="20000"
            android:layout_marginBottom="3dp"

            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text=" I Follow"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/ifollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginStart="23dp"
            android:text="20"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/ifollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginStart="20dp"
            android:text="Fans"
            android:layout_marginTop="16dp"

            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/Likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="22dp"
            android:text="50"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"

            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="18dp"
            android:text="Likes"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="20dp"
        android:layout_height="fill_parent"
        android:gravity="bottom">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="60dp"
            android:text="follow"
            android:background="@drawable/roundedbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:text="MESSAGE"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/roundedbuttonwhite"
            android:layout_width="0dp"
            android:elevation="10dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
